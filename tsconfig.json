{
    "compilerOptions": {
      "module": "commonjs",
      "target": "es2022",
      "strict": false,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "moduleResolution": "node",
      "sourceMap": true,
      "outDir": "./dist",
      "allowJs": true,
      "resolveJsonModule": true,
      "baseUrl": ".", 
      "paths": {
        "@tests/*": ["tests/*"], 
        "@src/*": ["src/*"] 
      }
    }
  }